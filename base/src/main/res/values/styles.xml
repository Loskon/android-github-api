<resources>
    <!-- Widgets -->
    <style name="RoundedBottomSheetStyle" parent="Theme.MaterialComponents.DayNight.BottomSheetDialog">
        <item name="colorPrimary">@color/primary_app_color</item>
        <item name="bottomSheetStyle">@style/RoundBackgroundStyle</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>

    <style name="RoundBackgroundStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_sheet_round_corner</item>
    </style>

    <style name="ToolbarTextFontStyle">
        <item name="android:textColor">?android:colorPrimary</item>
        <item name="android:fontFamily">@font/roboto_light</item>
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>