<resources>
    <style name="AppTheme" parent="BaseAppTheme">
        <!-- Primary color -->
        <item name="colorPrimary">@color/primary_app_color</item>
        <item name="colorPrimaryVariant">@color/primary_app_color</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <!-- Secondary color -->
        <item name="colorSecondary">@color/primary_app_color</item>
        <item name="colorSecondaryVariant">@color/primary_app_color</item>
        <item name="colorOnSecondary">@android:color/black</item>
        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/window_background_color</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Window background color -->
        <item name="android:windowBackground">@color/window_background_color</item>
        <item name="android:colorBackground">@color/window_background_color</item>
    </style>

    <!-- App theme -->
    <style name="BaseAppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:fontFamily">@font/roboto_light</item>
        <item name="android:overScrollMode">never</item>
        <item name="android:navigationBarColor">@android:color/black</item>
        <item name="alertDialogTheme">@style/AlertDialogTheme</item>
        <item name="preferenceTheme">@style/PreferenceTheme</item>
        <item name="snackbarStyle">@style/SnackbarStyle</item>
        <item name="snackbarButtonStyle">@style/SnackbarButtonStyle</item>
        <item name="snackbarTextViewStyle">@style/SnackbarTextViewStyle</item>
    </style>

    <style name="AlertDialogTheme" parent="Theme.MaterialComponents.DayNight.Dialog.Alert">
        <item name="buttonBarButtonStyle">@style/ButtonBarStyle</item>
        <item name="android:windowSoftInputMode">stateUnchanged</item>
    </style>

    <style name="ButtonBarStyle" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/primary_app_color</item>
        <item name="rippleColor">?attr/colorControlHighlight</item>
    </style>

    <style name="PreferenceTheme" parent="PreferenceThemeOverlay.v14.Material">
        <item name="android:divider">@null</item>
        <item name="android:dividerHeight">0dp</item>
        <item name="android:layout">@layout/fragment_settings</item>
    </style>

    <style name="SnackbarStyle" parent="Widget.MaterialComponents.Snackbar">
        <item name="elevation">0dp</item>
    </style>

    <style name="SnackbarButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Snackbar">
        <item name="android:fontFamily">@font/roboto_light</item>
        <item name="rippleColor">?attr/colorControlHighlight</item>
        <item name="strokeColor">@android:color/white</item>
        <item name="strokeWidth">@dimen/margin_xtiny</item>
    </style>

    <style name="SnackbarTextViewStyle" parent="Widget.MaterialComponents.Snackbar.TextView">
        <item name="android:fontFamily">@font/roboto_light</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
</resources>