<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view_repo"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/margin_xsmall"
    app:cardBackgroundColor="@color/card_view_background"
    app:cardCornerRadius="@dimen/margin_xsmall"
    app:cardUseCompatPadding="true"
    app:rippleColor="?attr/colorControlHighlight">

    <LinearLayout
        android:id="@+id/lin_layout_repo_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/margin_xmedium"
        android:paddingVertical="@dimen/margin_xmedium">

        <TextView
            android:id="@+id/tv_repo_name_card"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:ellipsize="end"
            android:gravity="start"
            android:textColor="@color/primary_text"
            android:textSize="@dimen/text_medium"
            android:textStyle="bold"
            tools:text="mojombo/asteroids" />

        <TextView
            android:id="@+id/tv_repo_description_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_xsmall"
            android:ellipsize="end"
            android:gravity="start"
            android:maxLines="2"
            android:textColor="@color/secondary_text"
            android:textSize="@dimen/text_small"
            tools:ignore="TextContrastCheck"
            tools:text="Destroy your Atom editor, Asteroids style!" />

        <TextView
            android:id="@+id/tv_repo_language_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_xsmall"
            android:ellipsize="end"
            android:gravity="start"
            android:textColor="@color/secondary_text"
            android:textSize="@dimen/text_small"
            tools:ignore="TextContrastCheck"
            tools:text="JavaScript" />

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>